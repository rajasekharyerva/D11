INSTALL MYSQL:
==============
STEP 1 — INSTALLING MYSQL:
sudo apt-get update
sudo apt-get install mysql-server

STEP 2 — CONFIGURING MYSQL:
mysql_secure_installation

STEP 3 — TESTING MYSQL:
systemctl status mysql.service
sudo systemctl start mysql
/etc/init.d/mysql start

RESET A MYSQL ROOT PASSWORD:
# service mysql stop
# mysqld_safe --skip-grant-tables &
$ mysql -u root

mysql> use mysql;
mysql> update user set authentication_string=PASSWORD("YOUR-NEW-ROOT-PASSWORD") where User='root';
mysql> flush privileges;
mysql> quit

# service mysql stop
# service mysql start
$ mysql -u root -p

MYSQLD_SAFE DIRECTORY '/VAR/RUN/MYSQLD' FOR UNIX SOCKET FILE DON'T EXISTS:
mkdir -p /var/run/mysqld
chown mysql:mysql /var/run/mysqld


REMOVE PACKGES FROM UBUNTU:
dpkg --list
sudo apt-get --purge remove <package>


CAN'T CONNECT TO LOCAL MYSQL SERVER THROUGH SOCKET '/VAR/RUN/MYSQLD/MYSQLD.SOCK:
sudo service mysql start
/etc/init.d/mysql start
ps -A|grep mysql
sudo pkill mysql
ps -A|grep mysqld
sudo pkill mysqld
sudo service mysql restart
mysql -u root -p

SQL CREATE TABLE EXAMPLE:
CREATE TABLE Persons (
    PersonID int,
    LastName varchar(255),
    FirstName varchar(255),
    Address varchar(255),
    City varchar(255) 
);

CREATE TABLE Students (
    RNo int,
    FirstName varchar(255)
);

INSERT INTO Students 
VALUES (1, 'Anjaneyulu');
INSERT INTO Students 
VALUES (2, 'Niranjan');
INSERT INTO Students 
VALUES (3, 'Peddanna');
INSERT INTO Students 
VALUES (4, 'Suresh');
INSERT INTO Students 
VALUES (5, 'Ashok');
INSERT INTO Students 
VALUES (6, 'Rajasekhar');

CREATE TABLE Marks (
    Marks int,
    FirstName varchar(255)
);


INSERT INTO Marks VALUES (100, 'Anjaneyulu');
INSERT INTO Marks VALUES (200, 'Niranjan');
INSERT INTO Marks VALUES (300, 'Peddanna');
INSERT INTO Marks VALUES (400, 'Suresh');
INSERT INTO Marks VALUES (500, 'Ashok');
INSERT INTO Marks VALUES (600, 'Rajasekhar');

select * from Students inner join Marks on Students.FirstName = Marks.FirstName where Marks = (select max(Marks) from Marks);

INSERT INTO SYNTAX:

INSERT INTO table_name (column1, column2, column3, ...)
VALUES (value1, value2, value3, ...)

INSERT INTO table_name
VALUES (value1, value2, value3, ...);

INSERT INTO Customers (CustomerName, ContactName, Address, City, PostalCode, Country)
VALUES ('Cardinal', 'Tom B. Erichsen', 'Skagen 21', 'Stavanger', '4006', 'Norway');

Tools>Preferences>Database>Third Party JDBC Driver

DELETE FROM `table_name` [WHERE condition];




